{{#paper-toolbar class="md-whiteframe-1dp page-main-toolbar" as |toolbar|}}
    {{#toolbar.tools}}
        {{#paper-sidenav-toggle as |toggleAction|}}
            {{#paper-button onClick=(action toggleAction) iconButton=true}}
                {{paper-icon "menu"}}
            {{/paper-button}}
        {{/paper-sidenav-toggle}}
        <h2>
            {{pageTitle}}
        </h2>
        <span class="flex"></span>

        {{#if session.isAuthenticated}}
            {{#paper-button class="hide show-gt-sm" onClick=(transition-to "index")}}
                Home
            {{/paper-button}}

            {{#paper-button class="hide show-gt-sm" onClick=(transition-to "users")}}
                Users
            {{/paper-button}}

            {{#paper-button class="hide show-gt-sm" onClick=(transition-to "app.index")}}
                Rooms
            {{/paper-button}}

            {{#paper-button class="hide show-gt-sm" onClick=(route-action 'logout')}}
                Logout
            {{/paper-button}}
        {{else}}
            {{#paper-button class="hide show-gt-sm" onClick=(transition-to "auth.register")}}
                Register
            {{/paper-button}}

            {{#paper-button class="hide show-gt-sm" onClick=(transition-to "auth.login")}}
                Login
            {{/paper-button}}
        {{/if}}
    {{/toolbar.tools}}
{{/paper-toolbar}}