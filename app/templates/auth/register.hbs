{{#paper-content flex=true scroll-y=true layout-padding=true}}
    {{#doc-content}}
        {{#paper-form as |form|}}
            <form {{action (route-action "doRegister") on="submit"}}>
                <div class="layout-row">
                    <div class="layout-column flex-50">
                        {{form.input label="Username" value=model.email onChange=(action (mut model.email))}}
                        {{form.input label="Password" type="password" value=model.password onChange=(action (mut model.password))}}
                        {{form.input label="Password Confirmation" type="password" value=model.passwordConfirmation onChange=(action (mut model.passwordConfirmation))}}
                    </div>
                </div>
                <div class="layout-row">
                    {{#form.submit-button type="submit" raised=true primary=true}}Register{{/form.submit-button}}
                </div>
            </form>
        {{/paper-form}}
    {{/doc-content}}
{{/paper-content}}